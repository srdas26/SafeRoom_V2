    <top>
        <BorderPane fx:id="headerBar" prefHeight="32.0" styleClass="header-bar">
            <!-- Sol taraf: macOS için window controls buraya yerleştirilecek (dinamik) -->
            <left>
                <HBox fx:id="windowControlsLeft" alignment="CENTER_LEFT" spacing="8" visible="false" managed="false">
                    <padding>
                        <Insets left="12.0" />
                    </padding>
                    <children>
                        <JFXButton fx:id="closeButtonMac" styleClass="window-control-button-mac, close-button-mac" text="">
                            <graphic>
                                <Region styleClass="mac-button-close" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="minimizeButtonMac" styleClass="window-control-button-mac, minimize-button-mac" text="">
                            <graphic>
                                <Region styleClass="mac-button-minimize" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="maximizeButtonMac" styleClass="window-control-button-mac, maximize-button-mac" text="">
                            <graphic>
                                <Region styleClass="mac-button-maximize" />
                            </graphic>
                        </JFXButton>
                    </children>
                </HBox>
            </left>

            <!-- Sağ taraf: Windows için window controls -->
            <right>
                <HBox fx:id="windowControlsRight" alignment="CENTER" spacing="0" styleClass="window-controls">
                    <children>
                        <JFXButton fx:id="minimizeButton" styleClass="window-control-button, minimize-button" text="">
