                                <FontIcon iconLiteral="fas-minus" styleClass="window-control-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="maximizeButton" styleClass="window-control-button, maximize-button" text="">
                            <graphic>
                                <FontIcon iconLiteral="far-square" styleClass="window-control-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="closeButton" styleClass="window-control-button, close-button" text="">
                            <graphic>
                                <FontIcon iconLiteral="fas-times" styleClass="window-control-icon" />
                            </graphic>
                        </JFXButton>
                    </children>
                </HBox>
            </right>
        </BorderPane>
    </top>

